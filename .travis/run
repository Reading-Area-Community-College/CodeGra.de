#!/bin/bash

res="127"

echo "Running test with pwd: $(pwd)"

set -o xtrace

if [[ "$TO_RUN" = "postgres-test" ]]; then
    TEST_FLAGS="--postgresql=travis_ci_test"
    SQLALCHEMY_DATABASE_URI='postgresql:///travis_ci_test' ./manage.py db upgrade
fi

case "$TO_RUN" in
    "coverage")
        pytest --cov psef --cov-report term-missing "$(pwd)/psef_test/" -vvvv
        res="$?"
        if [[ "$res" -eq 0 ]]; then
            pytest --cov psef \
                   --cov-append \
                   --cov-report term-missing \
                   --doctest-modules psef \
                   -vvvv
            res="$?"
        fi
        set +o xtrace
        ;;
    "tests"|"postgres-test")
        pytest -vvvv $TEST_FLAGS "$(pwd)/psef_test/"
        res="$?"
        if [[ "$res" -eq 0 ]]; then
            cd docs || exit 1
            make html
            res="$?"
            cd .. || exit 1
        fi
        if [[ "$res" -eq 0 ]]; then
            pytest --doctest-modules psef -vvvv
            res="$?"
        fi
        set +o xtrace
        ;;
    "mypy")
        mypy --ignore-missing-imports \
             --disallow-untyped-defs \
             --check-untyped-defs \
             --disallow-subclassing-any \
             "$(pwd)/psef/"
        res="$?"
        set +o xtrace
        ;;
    "lint")
        make lint
        res="$?"
        set +o xtrace
        ;;
    "yapf")
        out="$(yapf -rdp "$(pwd)/psef" "$(pwd)/psef_test")"
        set +o xtrace
        if [[ "$out" ]]; then
            echo "$out"
            res=1
        else
            res=0
        fi
        ;;

esac

set +o xtrace

exit "$res"
